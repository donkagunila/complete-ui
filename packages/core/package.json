{
  "name": "@complete-ui/core",
  "version": "0.0.1-beta-1.3",
  "description": "The React UI library to build web applications faster.",
  "private": false,
  "license": "Apache 2.0",
  "homepage": "https://github.com/donkagunila/complete-ui#readme",
  "bugs": {
    "url": "https://github.com/donkagunila/complete-ui/issues"
