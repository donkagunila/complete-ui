  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donkagunila/complete-ui.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.esm.js"
    },
