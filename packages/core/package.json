    "date-fns": "^4.1.0",
    "lucide-react": "^0.454.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.3.0",
    "react-spinners": "^0.14.1",
    "rollup": "^4.24.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "dist/index.css"
  ]
