    "build": "rollup -c",
    "dev": "rollup -c --watch"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@complete-ui/eslint-config": "*",
