{
  "extends": "@complete-ui/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "rootDir": "src",
    "baseUrl": "src/",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  },
  "include": [
    "**/*.tsx",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
